#!/usr/bin/env bash

# Extract all args that might be globs
globs=()
for arg in "$@"; do
    [[ "$arg" == *"*"* || "$arg" == *"?"* ]] && globs+=("$arg")
done

# If there are globs, check if they were expanded
if [[ ${#globs[@]} -eq 0 ]]; then
    # Check for multiple .py-looking files â€” suspicious!
    count_py=0
    for arg in "$@"; do
        [[ "$arg" =~ \.py$ ]] && ((count_py++))
    done
    if (( count_py > 1 )); then
        echo "ðŸ’¡ Note: A glob like '*.py' was likely expanded by the shell."
        echo "   To avoid this, quote it like: \"*.py\""
    fi
fi

# DEBUG: build find
path=$1
shift
if [[ $# -eq 0 ]]; then
    set -- "*"
fi

printf 'find "%s" -type f ' "$path"
printf '\\( '
first=1
for pat in "$@"; do
    [[ $first -eq 0 ]] && printf " -o "
    printf -- '-name "%s" ' "$pat"
    first=0
done
printf '\\)\n'
echo "====="

# Run it:
find "$path" -type f \( $(printf -- '-name "%s" -o ' "$@" | sed 's/ -o $//') \)

